{
  "version": 2,
  "buildCommand": "rm -rf .next && npm run build --silent",
  "devCommand": "npm run dev --silent",
  "installCommand": "npm ci --prefer-offline --no-audit --no-fund --silent",
  "framework": "nextjs",
  "outputDirectory": ".next",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "env": {
    "NEXTAUTH_URL": "https://glixtron.vercel.app",
