{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "rm -rf node_modules package-lock.json && npm install",
  "framework": "nextjs",
  "regions": ["sin1"],
  "env": {
    "NEXTAUTH_URL": "https://glixtron.vercel.app",
    "NODE_ENV": "production",
    "NPM_CONFIG_CACHE": "/tmp/npm-cache"
  },
  "build": {
    "env": {
      "NEXTAUTH_URL": "https://glixtron.vercel.app"
    }
  },
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/[...nextauth]"
    }
  ]
}
