# Suppress npm warnings and optimize for production
audit=false
fund=false
optional=false
description=false
update-notifier=false
progress=false

# Optimize for CI/CD
prefer-offline=true

# Cache configuration
cache=/tmp/npm-cache

# Suppress deprecation warnings for specific packages
loglevel=warn

# Package resolution
strict-peer-deps=false
legacy-peer-deps=true
