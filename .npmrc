# Suppress npm warnings and optimize for production
audit=false
fund=false
optional=false
description=false
update-notifier=false
progress=false

# Optimize for CI/CD
prefer-offline=true

# Cache configuration
cache=/tmp/npm-cache

# Suppress specific warnings
loglevel=error

# Suppress whatwg-encoding deprecation warning
ignore-scripts=false

# Package resolution
strict-peer-deps=false
legacy-peer-deps=true

# Suppress specific deprecation warnings
loglevel=error

# Force resolutions
force=true

# Suppress encoding warnings
encoding-sniffer=false
