# Suppress npm warnings and optimize for production
audit=false
fund=false
optional=false
description=false
update-notifier=false
progress=false

# Optimize for CI/CD
prefer-offline=true

# Cache configuration
cache=/tmp/npm-cache

# Suppress all npm warnings
loglevel=error
silent=true
progress=false

# Suppress deprecated warnings
deprecation=false
fund=false
audit=false

# Suppress specific encoding warnings
encoding-sniffer=false
whatwg-encoding=false

# Force resolutions
force=true

# Suppress all warnings during install
prefer-offline=true
no-audit=true
no-fund=true
silent-install=true

# Cache optimization
cache=/tmp/npm-cache

# Suppress encoding warnings
encoding-sniffer=false

# Package resolution
strict-peer-deps=false
legacy-peer-deps=true
