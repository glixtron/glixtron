{
  "name": "glixtron",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_OPTIONS='--max-old-space-size=4096 --no-warnings' next dev",
    "build": "node scripts/validate-env.js && npm run lint && next build",
    "start": "NODE_OPTIONS='--max-old-space-size=4096' next start",
    "vercel-build": "NODE_OPTIONS='--max-old-space-size=4096' node scripts/validate-env.js && next build",
    "lint": "next lint --quiet",
    "test": "npm run build && npm run test:api",
    "lint:fix": "eslint --config .eslintrc.json . --ext .ts,.tsx,.js,.jsx --fix",
    "test:api": "node scripts/test-api.js",
    "test:health": "node scripts/health-check.js",
    "test:system": "node scripts/system-health-check.js",
    "test:mongodb": "node scripts/test-mongodb.js",
    "test:deployment": "node scripts/deployment-verification.js",
    "test:all": "npm run test:mongodb && npm run test:system",
    "validate-env": "node scripts/validate-env.js",
    "deploy": "vercel --prod",
    "deploy:preview": "vercel",
    "setup": "npm ci --prefer-offline --no-audit --no-fund --silent && npm run build",
    "postinstall": "echo 'âœ… Dependencies installed successfully' 2>/dev/null || true",
    "prebuild": "echo 'ðŸ”¨ Building Glixtron...' 2>/dev/null || true",
    "postbuild": "echo 'âœ… Glixtron build completed successfully' 2>/dev/null || true"
  },
  "engines": {
    "node": "24.x",
    "npm": ">=11.0.0"
  },
