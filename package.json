    "bcryptjs": "^2.4.3",
    "canvg": "^4.0.3",
    "cheerio": "^1.2.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.3.1",
    "framer-motion": "^11.3.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^4.0.0",
    "lucide-react": "^0.427.0",
    "mammoth": "^1.11.0",
    "ml-distance": "^4.0.1",
    "mongodb": "^6.21.0",
    "mongoose": "^8.21.1",
    "next": "^15.1.0",
    "next-auth": "^4.24.13",
    "openai": "^6.17.0",
    "pdf-parse": "^1.1.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.4.0",
    "tailwind-merge": "^3.4.0",
    "vercel": "^50.9.6"
  },
  "resolutions": {
    "whatwg-encoding": "npm:@exodus/bytes@^1.9.0",
    "encoding-sniffer": "npm:@exodus/bytes@^1.9.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^22.0.0",
